<div class="card-header d-flex justify-content-between align-items-center" style="height: 65px;">
  <div class="d-flex gap-2 align-items-center">
      <% if back_path.present? %>
        <%= link_to back_path, class: "btn btn-light btn-sm text-decoration-none" do %>
          <i class="bi bi-chevron-left" style="font-size: 1.5em;"></i>
        <% end %> 
      <% end %>
      <div class="d-flex flex-column">
        <h5 class="m-0"><%= title %></h5>
        <% if todo_list %>
          <p class="m-0 text-secondary"><small><%= todo_list.todo_items_percent_completed %>% Complete (<%= todo_list.total_completed %>/<%= todo_list.total_items %>)</small></p>
        <% end %>
      </div>
  </div>
  <div class="d-flex gap-2">
    <% if add %>
      <div>
        <%= link_to "New", new_todo_list_path, class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>
    <% if edit %>
      <div>
        <%= link_to "Edit", edit_todo_list_path(todo_list), class: "btn btn-secondary btn-sm" %>
      </div>
    <% end %>
    <% if delete %>
      <div>
        <%= button_to "Delete", todo_list, method: :delete, class: "btn btn-danger btn-sm" %>
      </div>
    <% end %>
  </div>
</div>